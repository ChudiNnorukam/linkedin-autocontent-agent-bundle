{
  "name": "linkedin-autocontent-agent-bundle",
  "version": "1.0.0",
  "description": "Complete Automated LinkedIn Content Generation System",
  "main": "agents/linkedin-autocontent-agent.js",
  "scripts": {
    "start": "node agents/linkedin-autocontent-agent.js",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:content": "node tests/content-generation.test.js",
    "test:api": "node tests/api-integration.test.js",
    "test:scheduler": "node tests/scheduler.test.js",
    "health": "node utils/health-check.js",
    "monitor": "node utils/monitor.js",
    "analytics": "node dashboard/performance-dashboard.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "docs": "jsdoc -c jsdoc.json",
    "setup": "node setup-production.js"
  },
  "keywords": [
    "linkedin",
    "automation",
    "content-generation",
    "ai",
    "social-media",
    "api",
    "nodejs"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/linkedin-autocontent-agent-bundle.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/linkedin-autocontent-agent-bundle/issues"
  },
  "homepage": "https://github.com/yourusername/linkedin-autocontent-agent-bundle#readme",
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "node-cron": "^3.0.3",
    "winston": "^3.11.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "jsdoc": "^4.0.2",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "agents/**/*.js",
      "utils/**/*.js",
      "tasks/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "node": true,
      "es2021": true
    },
    "parserOptions": {
      "ecmaVersion": 2021
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  }
} 